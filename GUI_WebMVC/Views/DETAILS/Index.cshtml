@model IEnumerable<WebMVC.Models.DETAIL>
@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div id="page-wrapper">
    <div class="row">
        <div class="row">
            <div class="col-lg-12">
                <h4 style="margin-top: 23px; font-size: 40px; color: #4800ff">Tra cước</h4>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form class="form-horizontal">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Số điện thoại</label>
                            <div class="col-sm-3">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Từ ngày </label>
                            <div class="col-sm-3">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Đến ngày</label>
                            <div class="col-sm-3">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"></label>
                            <div class="col-sm-2">
                                <button type="submit" class="btn btn-success">Tra cước</button>
                            </div>
                        </div>
                    }
                </form>
            </div>
            <form id="formSearch" method="post">
                <div class="row" id="SearchBox">
                    <div class="col-md-1">Số Điện Thoại:</div>
                    <div class="col-md-2"><input type="text" id="sdt" name="sdt" /></div>
                    <div class="col-md-1"><input type="submit" id="submitSearch" value="Tìm" /></div>
                </div>
            </form>
            <table class="table table-striped table-bordered table-hover">
                <tr class="info">
                    <th>
                        SĐT
                    </th>
                    <th>
                        Thời gian bắt đầu
                    </th>
                    <th>
                        Thời gian kết thúc
                    </th>
                    <th>
                        Số phút 7h-23h
                    </th>
                    <th>
                        Số phút 23-7h
                    </th>
                    <th>
                        Cước phí
                    </th>
                    <th>Tên KH</th>
                </tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoDienThoaiFormat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.time_start)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.time_stop)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.minute_7hto23h)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.minute_23hto7h)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fare)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SIM.CUSTOMER.name_cus)
                    </td>
                </tr>
                }
            </table>
        </div>
    </div>
</div>
