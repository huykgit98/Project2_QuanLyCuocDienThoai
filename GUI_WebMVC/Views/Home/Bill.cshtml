@model IEnumerable<WebMVC.Models.BILL>
@{
    ViewBag.Title = "Bill";

    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div id="page-wrapper">
    <div class="row">
        <div class="row">
            <div class="col-lg-12">
                <h4 style="margin-top: 23px; font-size: 40px; color: #4800ff">Tra cước</h4>
            </div>
            <!-- /.col-lg-12 -->

        </div>

        <div class="row" id="dulieu">
            <table class="table table-striped table-bordered table-hover">
                <tr class="info">
                    <th>
                        Tên Khách Hàng
                    </th>
                    <th>
                        SĐT
                    </th>
                    <th>
                        Ngày Xuất
                    </th>
                    <th>
                        Kì Sử Dụng
                    </th>
                    <th>
                        Hạn Thanh Toán
                    </th>
                    <th>
                        Cước Thuê Bao
                    </th>
                    <th>
                        Tổng Thanh Toán
                    </th>
                    <th>Tình Trạng</th>
                    <th>Xem Chi Tiết</th>
                </tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SIM.CUSTOMER.name_cus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SIM.phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.invoice_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date_export)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date_cut)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.postage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fare)
                    </td>

                    @if (item.status.Equals(true))
                    {
                        <td>Đã thanh toán</td>
                    }
                    else
                    {
                        <td>Chưa thanh toán</td>}
                    <td>@Html.ActionLink("Chi tiết", "../Home/Detail", new { simID = item.id_sim, kiSD = item.date_export })</td>

                </tr>
                }
            </table>
        </div>
    </div>
</div>
